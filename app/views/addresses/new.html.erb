<!-- Landing image/text -->
<div class="address-wrapper ">
	<h3>Enter your address</h3>
  <p class="text-center"><%= @message %></p>
	<%= simple_form_for [@customer, Address.new] do |f| %>
    <%= f.input :address_line_one, required: true%>
    <%= f.input :address_line_two%>
    <%= f.input :address_line_three %>
    <%= f.input :postcode, input_html: {value: @customer.user.postcode },required: true %>
    <p style= "font-size:16px;"><i>We will deliver your Yoggie box between 3am and 6am. Where can we safely leave it? Be specific:</i></p>
    <%= f.input :delivery_instructions, label: "Safe place" %>
    <%= f.submit 'Submit', class: "btn-yoggie-main-green" %>
  <% end %>
</div>

