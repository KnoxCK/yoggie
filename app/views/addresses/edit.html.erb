<div class="address-wrapper">
  <h3>Change your address</h3>
  <p class="text-center"><%= @message %></p>
  <%= simple_form_for [@customer, @customer.address || Address.new] do |f| %>
    <%= f.input :address_line_one, input_html: {value: @customer.address&.address_line_one }, required: true %>
    <%= f.input :address_line_two, input_html: {value: @customer.address&.address_line_two } %>
    <%= f.input :address_line_three, input_html: {value: @customer.address&.address_line_three } %>
    <%= f.input :postcode, input_html: {value: @customer.user&.postcode }, required: true %>
    <p style= "font-size:16px;"><i>We will deliver your Yoggie box between 3am and 6am. Where can we safely leave it? Be specific:</i><%= @customer.address&.delivery_instructions %></p>
    <%= f.input :delivery_instructions, label: "Safe place" , input_html: {value: @customer.address&.delivery_instructions } %>
    <%= f.submit 'SUBMIT', class: "btn-yoggie-main-green" %>
  <% end %>
</div>

