<div class="address-wrapper">
	<h3>Change your address</h3>
	<%= simple_form_for [@customer, @customer.address] do |f| %>
	  <%= f.input :address_line_one %>
	  <%= f.input :address_line_two %>
	  <%= f.input :address_line_three %>
	  <%= f.input :postcode %>
	  <%= f.input :delivery_instructions %>
	  <%= f.submit 'Submit', class: "btn-yoggie-main-green" %>
	<% end %>
</div>