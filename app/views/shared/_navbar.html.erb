<div class="navbar-yoggie">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-yoggie-brand" do %>
    <%= image_tag "logo.png" %>
  <% end %>

  <div class="main-nav hidden-xs hidden-sm">
    <%= link_to "How Yoggie Works", root_path(:anchor => "how-it-works"), class: "navbar-yoggie-link" %>
    <%= link_to "About Our Yoggies", root_path(:anchor => "about-yoggies"), class: "navbar-yoggie-link"  %>
    <%= link_to "Yoggie Flavours", smoothies_path, class: "navbar-yoggie-link"  %>
  </div>

  <div class="navbar-yoggie-social">
    <%= link_to "https://www.facebook.com/yoggie", target: "_blank" do %>
      <i class="fa fa-facebook"></i>
    <% end %>
    <%= link_to "https://twitter.com/yoggie", target: "_blank" do %>
      <i class="fa fa-twitter"></i>
    <% end %>
    <%= link_to "https://www.instagram.com/yoggie/", target: "_blank" do %>
      <i class="fa fa-instagram"></i>
    <% end %>
  </div>
  

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-yoggie-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-yoggie-dropdown-menu">
        <li><a href="#">Some mobile link</a></li>
        <li><a href="#">Other one</a></li>
        <li><a href="#">Other one</a></li>
      </ul>
    </div>
  </div>
</div>


