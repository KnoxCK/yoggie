<div class="navbar-yoggie">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-yoggie-brand" do %>
    <%= image_tag "logo.png" %>
  <% end %>

  <div class="main-nav hidden-xs hidden-sm">
    <%= link_to "How Yoggie Works", root_path(:anchor => "how-it-works"), class: "navbar-yoggie-link", id: "how-it-worksl" %>
    <%= link_to "About", root_path(:anchor => "about"), class: "navbar-yoggie-link", id: "about-yoggies"  %>
    <%= link_to "Our Yoggies", smoothies_path, class: "navbar-yoggie-link"  %>
  </div>

  <div class="navbar-yoggie-top-nav">
    <div class="top-nav-links">
      <% if current_user %>
        <%= link_to 'My Dashboard', customer_path(current_user.customer) if current_user.customer %>
        <div class="top-nav-line"></div>
        <%= link_to 'Sign Out', destroy_user_session_path, method: :delete %>
      <% else %>
        <%= link_to 'Log In', new_user_session_path %>
        <div class="top-nav-line"></div>
        <%= link_to 'Sign Up', new_user_registration_path %>
      <% end %>
      <div class="navbar-yoggie-social">
      <%= link_to "https://www.facebook.com/yoggie", target: "_blank" do %>
        <i class="fa fa-facebook"></i>
      <% end %>
      <%= link_to "https://twitter.com/yoggie", target: "_blank" do %>
        <i class="fa fa-twitter"></i>
      <% end %>
      <%= link_to "https://www.instagram.com/yoggie/", target: "_blank" do %>
        <i class="fa fa-instagram"></i>
      <% end %>
    </div>
  </div>
  </div>



  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-yoggie-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-yoggie-dropdown-menu">
        <li><%= link_to "How Yoggie Works", root_path(:anchor => "how-it-works") %></li>
        <li><%= link_to "About", root_path(:anchor => "about-yoggies") %></li>
        <li><%= link_to "Our Yoggies", smoothies_path %></li>
      </ul>
    </div>
  </div>
</div>


