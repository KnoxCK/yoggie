<!-- <div class="smoothie-banner"></div> -->
<div class="smoothie-wrapper">
  <div class="smoothie">
    <div class="standard-yoggie-main section-padding">
      <div class="back-to-smoothies-link">
        <i class="fa fa-arrow-left"> </i> <%= link_to 'Back to all Yoggies', 'javascript:history.back()' %>
      </div>
      <h2><%= @smoothie.name.titleize %></h2>
      <div class="standard-yoggie-main-content">
        <%= cl_image_tag @smoothie.image %>
        <div class="standard-yoggie-main-details">
          <h4><%= @smoothie.description %><br></br></h4>
            <%#ß= link_to "ADD TO BOX", customer_baskets_path(@smoothie, current_user.customer), class: "btn-yoggie-main-clear"  %>
        </div>
      </div>
      <div class="badges">
        <% @smoothie.badges.each do |badge| %>
          <%= cl_image_tag badge.image %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="standard-yoggie-nutrition">
    <div class="nutrition-border section-padding">
      <div class="standard-yoggie-nutrition-top">
        <div class="standard-yoggie-nutrition-topleft">
          <h4>Includes:</h4>
          <p>
            <% @smoothie.ingredients.uniq.each do |i| %>
              <ul>✓ &nbsp; <%= i.name.titleize %></ul>
            <% end %>
          </p>
        </div>
        <div class="standard-yoggie-nutrition-right">
          <h4>Why It's Delicious:</h4>
          <p><%= @smoothie.ingredient_description %></p>
        </div>
      </div>

      <div class="standard-yoggie-nutrition-bottom">
        <div class="js-tabs-container yoggie-single-tabs-container">
          <ul class="yoggie-single-tabs-list">
            <li class="js-tab tab--active" data-tab="macro"><h4>Macro</h4></li>
            <li class="js-tab" data-tab="nutrition"><h4>Nutrition</h4></li>
            <li class="js-tab" data-tab="ingredients"><h4>Ingredients</h4></li>
          </ul>
          <div class="js-tab-content tab-content--active yoggie-single-tab-content" data-tab="macro">
            <div>
              <p>your smoothie has...</p>
              <div>
                294 kcal per yoggie
              </div>

              <ul>
                <li>
                  <div>22%</div>
                  <div>carbs</div>
                  <div>34g</div> <!-- if customer -->
                </li>
                <li>
                  <div>22%</div>
                  <div>protein</div>
                  <div>34g</div> <!-- if customer -->
                </li>
                <li>
                  <div>22%</div>
                  <div>protein</div>
                  <div>fat</div> <!-- if customer -->
                </li>
              </ul>
            </div>
          </div>
          <div class="js-tab-content yoggie-single-tab-content" data-tab="nutrition">
            <div>
              <table id="customers">
                <tbody>
                  <tr>
                    <th>Typical values</th>
                    <th>per 100g</th>
                    <% if current_user.try(:customer) %>
                      <th>per yoggie pack</th>
                    <% end %>
                  </tr>
                  <tr>
                    <td rowspan="2">Energy</td>
                    <td><%= @smoothie.nutri_info.energy_kJ %> kJ</td>
                    <% if current_user.try(:customer) %>
                      <td><%= @smoothie.nutri_info.energy_kJ %> kJ</td>
                    <% end %>
                  </tr>
                  <tr>
                    <td><%= @smoothie.nutri_info.energy_kcal %> kCal</td>
                    <% if current_user.try(:customer) %>
                      <td><%= @smoothie.nutri_info.energy_kcal %> kCal</td>
                    <% end %>
                  </tr>
                  <tr>
                    <td>Fat</td>
                    <td><%= @smoothie.nutri_info.fat_g %> g</td>
                    <% if current_user.try(:customer) %>
                      <td><%= @smoothie.nutri_info.fat_g %> g</td>
                    <% end %>
                  </tr>
                  <tr>
                    <td>of which saturates</td>
                    <td><%= @smoothie.nutri_info.fat_saturates_g %> g</td>
                    <% if current_user.try(:customer) %>
                      <td><%= @smoothie.nutri_info.fat_saturates_g %> g</td>
                    <% end %>
                  </tr>
                  <tr>
                    <td>Carbohydrate</td>
                    <td><%= @smoothie.nutri_info.carbs_g %> g</td>
                    <% if current_user.try(:customer) %>
                      <td><%= @smoothie.nutri_info.carbs_g %> g</td>
                    <% end %>
                  </tr>
                  <tr>
                    <td>of which sugars</td>
                    <td><%= @smoothie.nutri_info.carbs_sugars_g %> g</td>
                    <% if current_user.try(:customer) %>
                      <td><%= @smoothie.nutri_info.carbs_sugars_g %> g</td>
                    <% end %>
                  </tr>
                  <tr>
                    <td>Fibre</td>
                    <td><%= @smoothie.nutri_info.fibre_g %> g</td>
                    <% if current_user.try(:customer) %>
                      <td><%= @smoothie.nutri_info.fibre_g %> g</td>
                    <% end %>
                  </tr>
                  <tr>
                    <td>Protein</td>
                    <td><%= @smoothie.nutri_info.protein_g %> g</td>
                    <% if current_user.try(:customer) %>
                      <td><%= @smoothie.nutri_info.protein_g %> g</td>
                    <% end %>
                  </tr>
                  <tr>
                    <td>Salt</td>
                    <td><%= @smoothie.nutri_info.salt_g %> g</td>
                    <% if current_user.try(:customer) %>
                      <td><%= @smoothie.nutri_info.salt_g %> g</td>
                    <% end %>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
          <div class="js-tab-content yoggie-single-tab-content" data-tab="ingredients">
            <ul>
              <% @smoothie.smoothie_ingredients.where(large: false).each do |small_ingredient| %>
                <li><%= small_ingredient.ingredient.name.titleize %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>

      <br>
    </div>
  </div>
</div>

