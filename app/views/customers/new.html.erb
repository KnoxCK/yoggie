<%= simple_form_for @customer do |f| %>
  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.input :age %>
  <%= f.input :gender %>
  <%= f.input :height %>
  <%= f.input :weight %>
  <%= f.input :activity_level, as: :select, collection: Customer::ACTIVITY_LEVELS.map{|a|a.humanize} %>
  <%= f.input :goal, as: :select, collection: Customer::GOALS.map{|g|g.humanize} %>
  <%= f.input :newsletter %>
  <%= f.submit %>
<% end %>
