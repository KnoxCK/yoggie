<div class="customer-vitals-wrapper">
	<h4><%= @customer.first_name %> <%= @customer.last_name %></h4>
	<div class="customer-vitals">
		<div class="customer-vitals-details">
			<h1>My Vitals</h1>
			<p>Age: <%= @customer.age %></p>
			<p>Gender: <%= @customer.gender %></p>
			<p>Height: <%= @customer.height %></p>
			<p>Weight: <%= @customer.weight %></p>
			<p>Meals per day: <%= @customer.meals_per_day %></p>
			<p>Activity Level: <%= @customer.activity_level %></p>
			<p>Goal: <%= @customer.goal %></p>
		</div>
		<div class="customer-vitals-details">
			<h1>My Customisation</h1>
			<p>Your BMR: <%= @customer.bmr %></p>
			<p>Your Total Daily Energy Expenditure: <%= @customer.tdee %></p>
			<p>Daily Target Caloric Intake: <%= @customer.daily_calorie_goal %></p>
			<p>Calories per Smoothie: <%= @customer.calories_per_shake %></p>
			<p>Percentage Protein: <%= @customer.protein %></p>
			<p>Percentage Fat: <%= @customer.fat %></p>
			<p>Percentage Carbohydrate: <%= @customer.carbs %></p>

			<%= link_to 'Change my vitals and recalculate', edit_customer_path(@customer) %>
		</div>

		<div class="customer-vitals-details">
			<h1>My Smoothies</h1>
			<ul>
			  <% @customer.basket.smoothies.each do |smoothie| %>
			    <p><%= smoothie.name %></p>
			  <% end %>
			</ul>
			<%= link_to 'Change my Smoothies', edit_customer_basket_path(@customer, @customer.basket) %>
		</div>
	</div>
</div>
